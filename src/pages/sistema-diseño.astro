---
import Layout from '~/layouts/Layout.astro';
import { ui } from '~/i18n/ui';
import Button from '~/components/ui/Button.astro';
import Section from '~/components/layout/Section.astro';
import Container from '~/components/ui/Container.astro';
import Grid from '~/components/ui/Grid.astro';
import Heading from '~/components/ui/Heading.astro';
import Text from '~/components/ui/Text.astro';
import Badge from '~/components/ui/Badge.astro';
import Card from '~/components/ui/Card.astro';
import { ArrowRight, ChevronRight, Check, Palette, Type, Layers, Sparkles, Zap, Shield, Smartphone } from 'lucide-react';
import { useTranslations } from '~/i18n/utils';

export async function getStaticPaths() {
  return Object.keys(ui).map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = useTranslations(lang);

const colors = [
    { name: 'Primary', class: 'bg-primary', text: 'text-white', description: 'Color principal para acciones importantes', usage: 'Botones principales, enlaces activos, elementos destacados' },
    { name: 'Primary Light', class: 'bg-primary/20', text: 'text-primary', description: 'Variación sutil del primario', usage: 'Estados hover, fondos de sección, elementos secundarios' },
    { name: 'Background', class: 'bg-background', text: 'text-foreground border border-foreground/10', description: 'Fondo principal del sitio', usage: 'Fondo principal de todas las páginas' },
    { name: 'Foreground', class: 'bg-foreground', text: 'text-background', description: 'Texto principal y elementos', usage: 'Títulos principales, texto importante, elementos activos' },
    { name: 'Muted', class: 'bg-muted', text: 'text-muted-foreground', description: 'Elementos secundarios y texto sutil', usage: 'Texto secundario, metadatos, información complementaria' },
    { name: 'Success', class: 'bg-green-500', text: 'text-white', description: 'Estados positivos y éxito', usage: 'Confirmaciones, mensajes de éxito, indicadores positivos' },
    { name: 'Warning', class: 'bg-amber-500', text: 'text-white', description: 'Alertas y atención', usage: 'Advertencias, notificaciones importantes, estados pendientes' },
    { name: 'Error', class: 'bg-red-500', text: 'text-white', description: 'Errores y acciones críticas', usage: 'Mensajes de error, botones de eliminar, estados críticos' },
    { name: 'Info', class: 'bg-blue-500', text: 'text-white', description: 'Información y ayuda', usage: 'Tooltips, mensajes informativos, elementos de ayuda' },
];

const gradients = [
    { name: 'Primary Gradient', class: 'bg-gradient-to-r from-primary to-indigo-600', text: 'text-white', description: 'Gradiente principal para elementos destacados', usage: 'Heros, CTAs importantes, tarjetas premium' },
    { name: 'Success Gradient', class: 'bg-gradient-to-r from-green-500 to-emerald-600', text: 'text-white', description: 'Gradiente para elementos positivos', usage: 'Secciones de éxito, testimonios, métricas positivas' },
    { name: 'Sunset Gradient', class: 'bg-gradient-to-r from-amber-500 to-orange-600', text: 'text-white', description: 'Gradiente cálido para llamadas de atención', usage: 'Promociones, banners especiales, elementos urgentes' },
    { name: 'Cool Gradient', class: 'bg-gradient-to-r from-blue-500 to-cyan-600', text: 'text-white', description: 'Gradiente fresco para elementos tecnológicos', usage: 'Secciones técnicas, características de producto, elementos modernos' },
];

const typography = [
    { name: 'Display 7xl', class: 'text-7xl font-display font-bold', label: 'Transforma tu presencia digital', usage: 'Heros de página, títulos principales, declaraciones impactantes' },
    { name: 'Display 5xl', class: 'text-5xl font-display font-bold', label: 'Diseño web profesional', usage: 'Secciones principales, títulos de servicios, encabezados importantes' },
    { name: 'Display 3xl', class: 'text-3xl font-display font-bold', label: 'Soluciones Creativas', usage: 'Subtítulos importantes, títulos de sección, elementos destacados' },
    { name: 'Heading 2xl', class: 'text-2xl font-bold', label: 'Experiencia de usuario', usage: 'Títulos de componentes, encabezados de contenido, secciones secundarias' },
    { name: 'Heading xl', class: 'text-xl font-semibold', label: 'Desarrollo a Medida', usage: 'Títulos de tarjetas, subtítulos de sección, elementos de navegación' },
    { name: 'Heading lg', class: 'text-lg font-semibold', label: 'Optimización y Rendimiento', usage: 'Títulos pequeños, encabezados de lista, elementos de formulario' },
    { name: 'Body Base', class: 'text-base', label: 'Creamos sitios web modernos, rápidos y optimizados para SEO que convierten visitantes en clientes.', usage: 'Texto principal de contenido, descripciones, párrafos informativos' },
    { name: 'Body Small', class: 'text-sm text-muted-foreground', label: 'Desarrollo web con las mejores tecnologías y prácticas del mercado.', usage: 'Texto secundario, pies de página, información complementaria' },
    { name: 'Body XS', class: 'text-xs text-muted-foreground', label: 'Última actualización: 2024', usage: 'Metadatos, fechas, información técnica, etiquetas pequeñas' },
];

const components = [
    {
        icon: Palette,
        title: 'Colores',
        description: 'Paleta coherente y accesible',
        features: ['Variables CSS', 'Modo oscuro', 'Accesibilidad WCAG']
    },
    {
        icon: Type,
        title: 'Tipografía',
        description: 'Jerarquía visual clara',
        features: ['Font system', 'Responsive', 'Optimizado']
    },
    {
        icon: Layers,
        title: 'Componentes',
        description: 'Reutilizables y consistentes',
        features: ['Atomic design', 'Documentados', 'Testeados']
    },
    {
        icon: Sparkles,
        title: 'Animaciones',
        description: 'Micro-interacciones fluidas',
        features: ['Framer Motion', 'Performantes', 'Accesibles']
    }
];
---

<Layout title="Sistema de Diseño - Omar Fuentes" description="Nuestro lenguaje visual y componentes para crear experiencias web consistentes y profesionales.">
    <Section class="pt-40 pb-24">
        <Container>
            <div class="text-center mb-16">
                <Heading level={1} class="mb-6">Sistema de Diseño</Heading>
                <Text variant="lead" class="max-w-3xl mx-auto mb-8">
                    Un lenguaje visual coherente y componentes reutilizables que garantizan calidad y consistencia en cada proyecto web que desarrollamos.
                </Text>
                <div class="flex flex-wrap gap-4 justify-center">
                    <Badge variant="accent" class="text-green-500 bg-green-500/10 border-green-500/20">
                        <Check class="w-4 h-4 mr-1" /> Accesible
                    </Badge>
                    <Badge variant="accent" class="text-blue-500 bg-blue-500/10 border-blue-500/20">
                        <Zap class="w-4 h-4 mr-1" /> Rápido
                    </Badge>
                    <Badge variant="accent" class="text-purple-500 bg-purple-500/10 border-purple-500/20">
                        <Shield class="w-4 h-4 mr-1" /> Escalable
                    </Badge>
                </div>
            </div>

            {/* Colors Section */}
            <div class="mb-24">
                <Heading level={2} class="mb-8 flex items-center gap-3">
                    <span class="w-8 h-8 rounded-lg bg-primary/10 flex items-center justify-center text-primary text-sm font-bold">01</span>
                    Colores
                </Heading>
                <Text class="mb-8 text-muted-foreground">
                    Nuestra paleta de colores está diseñada para crear jerarquía visual clara y mantener accesibilidad en todos los niveles.
                </Text>
                <Grid cols={3}>
                    {colors.map((color) => (
                        <div class="group">
                            <div class={`h-32 rounded-xl mb-4 shadow-sm ${color.class} ${color.name === 'Background' ? 'border border-foreground/10' : ''} group-hover:scale-105 transition-transform`}></div>
                            <h3 class="font-bold mb-1">{color.name}</h3>
                            <p class="text-sm text-muted-foreground mb-2">{color.description}</p>
                            <p class="text-xs text-muted-foreground mb-2 font-medium">{color.usage}</p>
                            <code class="text-xs text-muted-foreground bg-muted px-2 py-1 rounded inline-block">.{color.class}</code>
                        </div>
                    ))}
                </Grid>

                {/* Gradients Section */}
                <div class="mt-16">
                    <Heading level={3} class="mb-6">Gradientes de Color</Heading>
                    <Text class="mb-8 text-muted-foreground">
                        Gradientes predefinidos para crear impacto visual y jerarquía en elementos importantes.
                    </Text>
                    <Grid cols={2}>
                        {gradients.map((gradient) => (
                            <div class="group">
                                <div class={`h-24 rounded-xl mb-4 shadow-sm ${gradient.class} group-hover:scale-105 transition-transform`}></div>
                                <h3 class="font-bold mb-1">{gradient.name}</h3>
                                <p class="text-sm text-muted-foreground mb-2">{gradient.description}</p>
                                <p class="text-xs text-muted-foreground mb-2 font-medium">{gradient.usage}</p>
                                <code class="text-xs text-muted-foreground bg-muted px-2 py-1 rounded inline-block">.{gradient.class}</code>
                            </div>
                        ))}
                    </Grid>
                </div>
            </div>

            {/* Typography Section */}
            <div class="mb-24">
                <Heading level={2} class="mb-8 flex items-center gap-3">
                    <span class="w-8 h-8 rounded-lg bg-primary/10 flex items-center justify-center text-primary text-sm font-bold">02</span>
                    Tipografía
                </Heading>
                <Text class="mb-8 text-muted-foreground">
                    Sistema tipográfico optimizado para legibilidad y jerarquía visual, adaptado para todos los dispositivos.
                </Text>
                <div class="space-y-8 border border-foreground/10 rounded-2xl p-8 bg-background/50 backdrop-blur-sm">
                    {typography.map((type) => (
                         <div class="flex flex-col md:flex-row md:items-center gap-4 border-b border-foreground/5 last:border-0 pb-8 last:pb-0">
                            <div class="w-48 shrink-0">
                                <span class="text-muted-foreground text-sm font-mono">{type.name}</span>
                            </div>
                            <div class="flex-1">
                                <div class={type.class}>{type.label}</div>
                                <p class="text-xs text-muted-foreground mt-2 font-medium">{type.usage}</p>
                            </div>
                         </div>
                    ))}
                </div>
            </div>

            {/* Components Overview */}
            <div class="mb-24">
                <Heading level={2} class="mb-8 flex items-center gap-3">
                    <span class="w-8 h-8 rounded-lg bg-primary/10 flex items-center justify-center text-primary text-sm font-bold">03</span>
                    Componentes Principales
                </Heading>
                <Grid cols={2} class="gap-8">
                    {components.map((component) => (
                        <div class="p-8 rounded-2xl border border-foreground/10 bg-background hover:border-primary/50 transition-all group">
                            <div class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center text-primary mb-4 group-hover:scale-110 transition-transform">
                                <component.icon class="w-6 h-6" />
                            </div>
                            <Heading level={3} class="text-lg mb-2">{component.title}</Heading>
                            <Text class="mb-4">{component.description}</Text>
                            <div class="space-y-2">
                                {component.features.map((feature) => (
                                    <div class="flex items-center gap-2 text-sm text-muted-foreground">
                                        <Check class="w-4 h-4 text-green-500" />
                                        {feature}
                                    </div>
                                ))}
                            </div>
                        </div>
                    ))}
                </Grid>
            </div>

            {/* Interactive Components */}
            <div class="mb-24">
                <Heading level={2} class="mb-8 flex items-center gap-3">
                    <span class="w-8 h-8 rounded-lg bg-primary/10 flex items-center justify-center text-primary text-sm font-bold">04</span>
                    Componentes Interactivos
                </Heading>
                
                <div class="grid gap-12">
                    {/* Buttons */}
                    <div class="p-8 border border-foreground/10 rounded-2xl bg-background/50 backdrop-blur-sm">
                        <Heading level={3} class="text-xl mb-6">Botones</Heading>
                        <Text class="mb-6 text-sm text-muted-foreground">Botones para diferentes acciones y contextos en la interfaz.</Text>
                        
                        <div class="space-y-8">
                            <div>
                                <h4 class="font-semibold mb-4 text-sm">Botones Principales</h4>
                                <div class="flex flex-wrap gap-4 mb-4">
                                    <Button>Comenzar Ahora</Button>
                                    <Button variant="secondary">Ver Proyectos</Button>
                                    <Button variant="outline">Contactar</Button>
                                    <Button variant="ghost">Más Info</Button>
                                </div>
                                <p class="text-xs text-muted-foreground">Uso: CTAs principales, acciones importantes, navegación clave</p>
                            </div>
                            
                            <div>
                                <h4 class="font-semibold mb-4 text-sm">Botones con Iconos</h4>
                                <div class="flex flex-wrap gap-4 mb-4">
                                     <Button>
                                        Explorar Servicios <ArrowRight size={18} />
                                    </Button>
                                    <Button variant="outline">
                                        <ChevronRight size={18} /> Ver Detalles
                                    </Button>
                                </div>
                                <p class="text-xs text-muted-foreground">Uso: Acciones con dirección visual, enlaces a contenido, navegación</p>
                            </div>
                            
                            <div>
                                <h4 class="font-semibold mb-4 text-sm">Estados de Botones</h4>
                                <div class="flex flex-wrap gap-4 mb-4">
                                    <Button disabled>Deshabilitado</Button>
                                    <Button class="opacity-75 cursor-not-allowed">Cargando...</Button>
                                    <Button variant="outline" class="border-red-500 text-red-500 hover:bg-red-500 hover:text-white">Peligro</Button>
                                </div>
                                <p class="text-xs text-muted-foreground">Uso: Estados de formulario, acciones críticas, retroalimentación</p>
                            </div>
                        </div>
                    </div>

                    {/* Badges */}
                    <div class="p-8 border border-foreground/10 rounded-2xl bg-background/50 backdrop-blur-sm">
                         <Heading level={3} class="text-xl mb-6">Etiquetas y Estados</Heading>
                         <Text class="mb-6 text-sm text-muted-foreground">Indicadores visuales para estados y categorías de contenido.</Text>
                         
                        <div class="space-y-8">
                            <div>
                                <h4 class="font-semibold mb-4 text-sm">Estados de Sistema</h4>
                                <div class="flex flex-wrap gap-3 mb-4">
                                    <Badge variant="accent">Disponible</Badge>
                                    <Badge variant="accent" class="text-blue-500 bg-blue-500/10 border-blue-500/20">Nuevo</Badge>
                                    <Badge variant="accent" class="text-amber-500 bg-amber-500/10 border-amber-500/20">En Progreso</Badge>
                                    <Badge variant="accent" class="text-red-500 bg-red-400/10 border-red-500/20">Urgente</Badge>
                                    <Badge variant="secondary">Estándar</Badge>
                                </div>
                                <p class="text-xs text-muted-foreground">Uso: Estados de proyectos, indicadores de estado, filtros de contenido</p>
                            </div>
                            
                            <div>
                                <h4 class="font-semibold mb-4 text-sm">Categorías y Etiquetas</h4>
                                <div class="flex flex-wrap gap-3 mb-4">
                                    <Badge variant="outline">Frontend</Badge>
                                    <Badge variant="outline" class="border-green-500 text-green-500">Backend</Badge>
                                    <Badge variant="outline" class="border-purple-500 text-purple-500">UI/UX</Badge>
                                    <Badge variant="outline" class="border-orange-500 text-orange-500">Mobile</Badge>
                                </div>
                                <p class="text-xs text-muted-foreground">Uso: Categorización de contenido, etiquetas de habilidades, filtros técnicos</p>
                            </div>
                        </div>
                    </div>

                    {/* Cards */}
                     <div class="p-8 border border-foreground/10 rounded-2xl bg-background/50 backdrop-blur-sm">
                        <Heading level={3} class="text-xl mb-6">Tarjetas</Heading>
                        <Text class="mb-6 text-sm text-muted-foreground">Contenedores versátiles para organizar información y contenido.</Text>
                        
                        <div class="space-y-8">
                            <div>
                                <h4 class="font-semibold mb-4 text-sm">Tarjetas Estándar</h4>
                                <Grid cols={2} class="gap-6 mb-4">
                                    <div class="p-6 rounded-2xl border border-foreground/10 bg-background hover:border-primary/50 transition-colors group cursor-pointer">
                                        <div class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center text-primary mb-4 group-hover:scale-110 transition-transform">
                                            <Smartphone />
                                        </div>
                                        <Heading level={4} class="text-lg mb-2">Diseño Responsive</Heading>
                                        <Text small>
                                            Adaptación perfecta a todos los dispositivos. Experiencia optimizada para móviles, tablets y desktop.
                                        </Text>
                                    </div>
                                     <div class="p-6 rounded-2xl bg-linear-to-br from-primary to-indigo-600 text-white shadow-xl shadow-primary/25">
                                        <Heading level={4} class="text-lg mb-2">Optimización SEO</Heading>
                                        <p class="text-white/80 text-sm mb-4">
                                            Mejoramos tu posicionamiento con técnicas avanzadas de SEO técnico y contenido optimizado.
                                        </p>
                                        <button class="px-4 py-2 bg-white/20 hover:bg-white/30 rounded-lg text-sm font-medium backdrop-blur-sm transition-colors">
                                            Ver Servicios
                                        </button>
                                    </div>
                                </Grid>
                                <p class="text-xs text-muted-foreground">Uso: Presentación de servicios, características de producto, portafolio</p>
                            </div>
                            
                            <div>
                                <h4 class="font-semibold mb-4 text-sm">Tarjetas de Contenido</h4>
                                <Grid cols={3} class="gap-4 mb-4">
                                    <div class="p-4 rounded-xl border border-foreground/10 bg-background">
                                        <div class="w-8 h-8 rounded-lg bg-green-500/10 flex items-center justify-center text-green-500 mb-3">
                                            <Check class="w-4 h-4" />
                                        </div>
                                        <h5 class="font-semibold text-sm mb-1">Verificado</h5>
                                        <p class="text-xs text-muted-foreground">Proyecto completado y revisado</p>
                                    </div>
                                    <div class="p-4 rounded-xl border border-foreground/10 bg-background">
                                        <div class="w-8 h-8 rounded-lg bg-blue-500/10 flex items-center justify-center text-blue-500 mb-3">
                                            <Zap class="w-4 h-4" />
                                        </div>
                                        <h5 class="font-semibold text-sm mb-1">Rápido</h5>
                                        <p class="text-xs text-muted-foreground">Optimizado para velocidad máxima</p>
                                    </div>
                                    <div class="p-4 rounded-xl border border-foreground/10 bg-background">
                                        <div class="w-8 h-8 rounded-lg bg-purple-500/10 flex items-center justify-center text-purple-500 mb-3">
                                            <Shield class="w-4 h-4" />
                                        </div>
                                        <h5 class="font-semibold text-sm mb-1">Seguro</h5>
                                        <p class="text-xs text-muted-foreground">Protección de datos garantizada</p>
                                    </div>
                                </Grid>
                                <p class="text-xs text-muted-foreground">Uso: Características clave, beneficios, ventajas competitivas</p>
                            </div>
                        </div>
                    </div>
                    
                    {/* Forms */}
                    <div class="p-8 border border-foreground/10 rounded-2xl bg-background/50 backdrop-blur-sm">
                        <Heading level={3} class="text-xl mb-6">Elementos de Formulario</Heading>
                        <Text class="mb-6 text-sm text-muted-foreground">Componentes interactivos para captura de datos del usuario.</Text>
                        
                        <div class="space-y-6">
                            <div>
                                <h4 class="font-semibold mb-4 text-sm">Campos de Entrada</h4>
                                <div class="space-y-4 mb-4">
                                    <div>
                                        <label class="block text-sm font-medium mb-2">Nombre Completo</label>
                                        <input type="text" placeholder="Ingresa tu nombre" class="w-full px-4 py-2 border border-foreground/20 rounded-lg bg-background focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/20" />
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium mb-2">Correo Electrónico</label>
                                        <input type="email" placeholder="correo@ejemplo.com" class="w-full px-4 py-2 border border-foreground/20 rounded-lg bg-background focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/20" />
                                    </div>
                                </div>
                                <p class="text-xs text-muted-foreground">Uso: Formularios de contacto, registro, búsqueda de contenido</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {/* Use Cases */}
            <div class="mb-24">
                <Heading level={2} class="mb-8 flex items-center gap-3">
                    <span class="w-8 h-8 rounded-lg bg-primary/10 flex items-center justify-center text-primary text-sm font-bold">06</span>
                    Casos de Uso y Aplicaciones
                </Heading>
                <Text class="mb-8 text-muted-foreground">
                    Ejemplos prácticos de cómo aplicamos nuestro sistema de diseño en diferentes contextos y proyectos.
                </Text>
                
                <div class="space-y-12">
                    {/* Landing Page Example */}
                    <div class="p-8 border border-foreground/10 rounded-2xl bg-background/50 backdrop-blur-sm">
                        <Heading level={3} class="text-xl mb-6">Landing Page Principal</Heading>
                        <Text class="mb-6 text-sm text-muted-foreground">Estructura típica de una página de aterrizaje usando nuestro sistema.</Text>
                        
                        <div class="space-y-6">
                            <div class="p-6 rounded-xl bg-gradient-to-r from-primary to-indigo-600 text-white">
                                <h4 class="text-3xl font-display font-bold mb-4">Hero Section</h4>
                                <p class="text-lg mb-6 text-white/90">Usamos Display 7xl para el título principal y gradientes para impacto visual.</p>
                                <div class="space-y-2">
                                    <p class="text-sm text-white/80">• Título: text-7xl font-display font-bold</p>
                                    <p class="text-sm text-white/80">• Fondo: bg-gradient-to-r from-primary to-indigo-600</p>
                                    <p class="text-sm text-white/80">• CTA: Button primario con hover effects</p>
                                </div>
                            </div>
                            
                            <div class="p-6 rounded-xl border border-foreground/10 bg-background">
                                <h4 class="text-2xl font-bold mb-4">Sección de Características</h4>
                                <div class="grid grid-cols-3 gap-4 mb-4">
                                    <div class="p-4 rounded-lg border border-foreground/10">
                                        <div class="w-8 h-8 rounded-lg bg-green-500/10 flex items-center justify-center text-green-500 mb-2">
                                            <Check class="w-4 h-4" />
                                        </div>
                                        <h5 class="font-semibold text-sm mb-1">Característica 1</h5>
                                        <p class="text-xs text-muted-foreground">Descripción breve</p>
                                    </div>
                                    <div class="p-4 rounded-lg border border-foreground/10">
                                        <div class="w-8 h-8 rounded-lg bg-blue-500/10 flex items-center justify-center text-blue-500 mb-2">
                                            <Zap class="w-4 h-4" />
                                        </div>
                                        <h5 class="font-semibold text-sm mb-1">Característica 2</h5>
                                        <p class="text-xs text-muted-foreground">Descripción breve</p>
                                    </div>
                                    <div class="p-4 rounded-lg border border-foreground/10">
                                        <div class="w-8 h-8 rounded-lg bg-purple-500/10 flex items-center justify-center text-purple-500 mb-2">
                                            <Shield class="w-4 h-4" />
                                        </div>
                                        <h5 class="font-semibold text-sm mb-1">Característica 3</h5>
                                        <p class="text-xs text-muted-foreground">Descripción breve</p>
                                    </div>
                                </div>
