      <!-- 16. Recursos Adicionales -->
      <section class="mb-16">
          <h2 class="text-2xl font-bold mb-6">16. Recursos Adicionales</h2>
          <p class="text-muted-foreground leading-8 mb-4">Para más información sobre cookies:</p>
          <ul class="grid gap-2 pl-6 text-muted-foreground list-disc">
              <li>
                  <a class="font-semibold text-primary hover:underline" href="https://www.allaboutcookies.org/" target="_blank" rel="noreferrer">
